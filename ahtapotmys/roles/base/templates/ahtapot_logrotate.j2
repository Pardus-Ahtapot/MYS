## Bu dosya ansible tarafindan yonetilmektedir!
## Burada yapilan degisikliklerin uzerine yazilir!!
{{ ansible_managed }}

/var/log/ahtapot/*.log
{
        rotate 7 
        daily
        missingok
        notifempty
        dateext
        compress
}

/var/log/ahtapot/fw/*.log
{
        rotate 45 
        daily
        missingok
        notifempty
        compress
}

/var/log/client.log
{
        rotate 7 
        daily
        missingok
        notifempty
        dateext
        compress
}

/var/log/syslog
{
        rotate 7
        daily
        missingok
        notifempty
        dateext
        compress
        postrotate
                invoke-rc.d rsyslog rotate > /dev/null
        endscript
}

/var/log/mail.info
/var/log/mail.warn
/var/log/mail.err
/var/log/mail.log
/var/log/daemon.log
/var/log/kern.log
/var/log/auth.log
/var/log/user.log
/var/log/lpr.log
/var/log/cron.log
/var/log/debug
/var/log/messages
{
        rotate 7 
        daily
        missingok
        notifempty
        dateext
        compress
        sharedscripts
        postrotate
                invoke-rc.d rsyslog restart > /dev/null
        endscript
}
